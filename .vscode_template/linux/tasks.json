{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake -S . -B build -G Ninja -DSMUFL_MAPPING_USE_PREGENERATED_HEADERS=OFF"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build build",
            "dependsOn": ["configure"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
